.school-vs-box {
  display: flex; flex-wrap: nowrap;
}
.left {
 flex-shrink: 0;
 width: 154rpx; box-sizing: border-box;
 border-right: 1px solid #f2f2f2;
}
.left .school-name {
  display: flex; align-items: center; justify-content: center;
  height: 224rpx;
  box-sizing: border-box;
}
.left .school-name .icon {
  width: 93rpx; height: 152rpx;
}
.left .school-name .icon image {
  width: 100%; height: 100%;
}
.left .params {
  display: flex; align-items: center; justify-content: center;
  padding: 0 16rpx;
  height: 96rpx; box-sizing: border-box;
  border-top: 1px solid #f2f2f2;
  font-size: 28rpx; color: #a5a5a5; 
  text-align: center;
}
.left .params.jianjie {
  padding-top: 20rpx; padding-bottom: 20rpx;
  height: 398rpx;
}

.middle-cut {
  position: relative; z-index: 5;
  display: flex; align-items: center; justify-content: center;
  padding: 0 18rpx; box-sizing: border-box;
  height: 56rpx;
  background-color: #f2f2f2;
  color: #a5a5a5; font-size: 20rpx;
}
.middle-middle-cut::after {
  content: '';
  position: absolute; left: 0; top: 0; z-index: 99;
  width: 100vw; height: 100%; box-sizing: border-box;
  background-color: #f2f2f2;
}

.right {  
  flex-shrink: 0;
  width: calc(100% - 154rpx);
  box-sizing: border-box;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}
.right .school-container {
  display: flex; flex-wrap: nowrap;
  box-sizing: border-box;
}
.right .school-box {
  width: 256rpx; box-sizing: border-box;
  border-right: 1px solid #f2f2f2;
}
.right .school-name {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  padding: 0 10rpx;
  height: 224rpx; box-sizing: border-box;
  text-align: center;
}
.right .school-name .icon {
  width: 114rpx; height: 114rpx;
  border-radius: 50%; overflow: hidden;
}
.right .school-name .icon image {
  width: 100%; height: 100%;
}
.right .school-name .title {
  margin-top: 10rpx;
  line-height: 1.4;
}

.right .params {
  display: flex; align-items: center; justify-content: center;
  padding: 0 16rpx;
  height: 96rpx; box-sizing: border-box;
  border-top: 1px solid #f2f2f2;
  font-size: 28rpx;
  text-align: center;
}
.right .params.keypoint {
  background-color: rgba(75, 151, 255, 0.3);
}
.right .params.member {
  padding-top: 6rpx; padding-bottom: 6rpx;
}
.right .params.member > view {
  display: flex; align-items: flex-start;
  max-height: 100%; 
  overflow-y: auto;
}
.right .params.details {
  color: #4b97ff;
}
.right .params.guanwang {
  color: #4b97ff;
}
.right .params.jianjie {
  align-items: flex-start;
  padding-top: 20rpx; padding-bottom: 20rpx;
  height: 398rpx;
  overflow: hidden;
  /* background-color: rgba(75, 151, 255, 0.3); */
}
.right .params.jianjie > view {
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.right .params.jianjie rich-text {
  overflow: hidden;
  text-align: center;
}