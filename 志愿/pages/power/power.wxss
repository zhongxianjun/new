.power_wrap{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.power_box{
  background-color: #fff;
  border-radius: 8rpx;
  width: 562rpx;
  overflow: hidden;
 
}
.power_head{
  width: 100%;
  line-height: 87rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1px solid #dcdadd;
  text-align: center;
}
.power_body image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
  margin-top: 36rpx;
}
.power_titles{
  padding-left: 58rpx;
  font-weight: bold;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}
.power_tips{
  font-size: 26rpx;
  /* border-top: 2rpx solid #dcdadd; */
  color: #888888;
  width: 450rpx;
  margin: 0 auto;
  padding:36rpx 0;
  text-align: center;
}
.power_btn{
  background-color: #fff;
  color: #16b009;
  position: static;
  border-top: 2rpx solid #dcdadd;
  border-radius: 0;
}
.hover{
  background: #d9d9d9;
}