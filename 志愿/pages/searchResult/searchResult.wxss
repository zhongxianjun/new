
.search-box {
  position: relative;
  padding: 36rpx 30rpx 10rpx;
  height: 132rpx;
  overflow: hidden; box-sizing: border-box;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
.search-box .search-input {
  padding: 0 62rpx 0 33rpx;
  width: 100%; height: 86rpx; box-sizing: border-box;
  border-radius: 10rpx;  line-height: 86rpx; 
  font-size: 28rpx; color: #888;
  background-color: #f7f7f7;
}
.search-box .image-box {
  position: absolute; z-index: 9;
  right: 0; top: 36rpx;
  width: 103rpx; height: 86rpx;
}
.search-box .image-box image {
  position: absolute; z-index: 99;
  left: 0; top: 50%; transform: translateY(-50%);
  width: 33rpx; height: 31rpx;
}

.result-container-box {
  
}
.result-container {
  box-sizing: border-box;
  overflow: hidden;
}

.history-search {
  margin-top: 50rpx;
  padding: 0 30rpx;
}
.history-search .title {
  display: flex; align-items: center; justify-content: space-between;
}
.history-search .title .left {
  font-size: 28rpx; line-height: 1;
}
.history-search .title .right {
  width: 60rpx;
}
.history-search .title .image-box {
  width: 27rpx; height: 29rpx;
}
.history-search .title .image-box image {
  display: block; 
  width: 100%; height: 100%;
}
.history-search .content {
  display: flex; align-items: flex-start; flex-wrap: wrap;
}
.history-search .content .item {
  margin-right: 20rpx; margin-top: 30rpx;
  padding: 0 19rpx; 
  max-width: 272rpx; height: 54rpx;
  box-sizing: border-box; line-height: 54rpx; 
  background-color: #f7f7f7; color: #888888;
  overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
}