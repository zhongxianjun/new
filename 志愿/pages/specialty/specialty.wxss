/* pages/specialty/specialty.wxss */
page{height:100%}
swiper{
  display: flex;
  height: 100%;
  position: relative
}
.nav {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  transition: all 0.5s;
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 99999;
}
.nav view {
  width: 50%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}

.nav .act {
  color: #419aff;
}

.nav .gang {
  width: 120rpx;
  height: 4rpx;
  background-color: #419aff;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: all 0.5s;
}

.nav .gang2{
  right: 25%;
  left: 500rpx;
}

.nav .gang1 {
  left: 125rpx;
 
}

.xian {
  height: 16rpx;
  background-color: #f2f2f2;
  /* margin-top: 97rpx; */
}

.particulars {
 /* padding: 0 30rpx ; */
  margin: 0 auto;
  height: 100%;
}
swiper {
  height: calc(100vh - 112rpx);
}
scroll-view{
  height: calc(100vh - 112rpx);
  box-sizing: border-box;
}
.particulars .name {
  height: 91rpx;
  border-bottom: #f2f2f2 1rpx solid;
  line-height: 91rpx;
  font-size: 32rpx;
}

.msg .box:first-child {
  margin-top: 30rpx;
}

.msg .box {
  display: flex;
  font-size: 28rpx;
  color: #a5a5a5;
  margin-bottom: 36rpx;
}

.msg .box>view:nth-child(1) {
  /* width: 300rpx; */
}

.msg .box text {
  font-size: 28rpx;
  color: #323232;
  padding-left: 24px;
}

.mainSub {
  display: flex;
  font-size: 28rpx;
  color: #a5a5a5;
  margin-bottom: 40rpx;
  line-height: 50rpx;
}

.mainSub view:nth-child(2) {
  width: 555rpx;
  color: #323232;
}

.mainSub .blue {
  color: #4b97ff !important;
}

.mainSub>view:nth-child(1) {
  width: 135rpx;
}

.generalize {
  display: flex;
  font-size: 28rpx;
  color: #a5a5a5;
  line-height: 48rpx;
  margin-top:30rpx; 
 /* padding-right: 30rpx; */
}
.generalize rich-text{
  color: #323232;
  font-size: 28rpx;
}
.generalize>view:nth-child(1) {
  width: 135rpx;
}

.generalize>view:nth-child(2) {
  width: 555rpx;
  color: #323232;
}

.generalize:last-child {
  margin-bottom: 40rpx;
}
NoData{
  margin: 0 auto!important;
  width: 100%!important;
}
.nodata{
  height: 900rpx;
  display: flex;
  align-items: center;
}
