/**app.wxss**/
@import './weui.wxss';


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
   text-align: center
}
.tips_zz{
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  z-index: 2;
  padding-top: 140rpx;
}
.tips_zz image{
  width: 100%;
  height: 33%;
}
page{
  position: relative; z-index: 2;
  font-size: 26rpx;
  padding: 0;
  background-color: #fff;
}
.wait{
  width:100%;
  height:100%;
  position:fixed;

}
.wait image{
  width:100%;
  height:100%;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/* 全局点击态 */
.hover{
  background: #f0f0f0;
}
/*暂无数据  */
.zanwu{
  display:flex;
  justify-content:center;
  line-height:100rpx;
  color:#a5a5a5;

}

.select-button {
  background: linear-gradient(90deg, #508eff 0%, #39bafe 100%) !important;
}

@keyframes opacity {
  0% {
    opacity: 0; 
  }
  100% {
    opacity: 1; 
  }
}

.component-item {
  margin: 30rpx 0 0 0;
  padding: 0 30rpx;
  width: 100%; box-sizing: border-box;
}
.component-item .content {
  display: flex; align-items: center; justify-content: space-between;
  padding-bottom: 22rpx;
  border-bottom: 1px solid #f2f2f2;
}
.component-item .content .left {
  display: flex; align-items: center;
}
.component-item .content .left .icon {
  width: 70rpx; height: 70rpx; border-radius: 50%;
  overflow: hidden;
}
.component-item .content .left .icon image {
  width: 100%; height: 100%;
}
.component-item .content .left .name {
  margin: 0 0 0 30rpx;
  font-size: 28rpx; color: #323232;
}
.component-item .content .right {
  font-size: 24rpx; color: #a5a5a5;
}
.component-item .content .right span {
  color: #323232;
}

.component-item .details-box {
  overflow: hidden;
  transition: height 0.3s;
}
.component-item .details {
  padding: 10rpx 26rpx 20rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
  overflow: hidden;
}
.component-item .details .sort-box {
  display: flex; align-items: flex-start; flex-wrap: wrap;
  background-color: #f2f2f2;
}
.component-item .details .sort-box .sort {
  min-width: calc(100% / 3);
  font-size: 24rpx;  color: #a5a5a5; line-height: 58rpx;
}
.component-item .details .sort-box .sort span {
  color: #323232;
}

.component-item .details .check-add {
  display: flex; justify-content: center;
  margin: 30rpx 0 0;
}
.component-item .details .check-add .to {
  width: 278rpx; height: 80rpx; line-height: 80rpx;
  text-align: center; border-radius: 40rpx;
  color: #fff;
}
.component-item .details .check-add .check {
  background-color: #f33a50;
}
.component-item .details .check-add .add {
  margin-left: 44rpx;
  background-color: #4b97ff;
}

.select-condition-box {
  display: flex; align-items: flex-start; flex-wrap: wrap;
  padding: 0 30rpx;
  box-sizing: border-box;
}

selectpicker {
  display: flex; align-items: center;
  margin-top: 38rpx;
  min-width: 50%; box-sizing: border-box;
}
.select-condition {
  box-sizing: border-box;
  color: #a5a5a5; 
}
.select-condition .select-picker {
  display: flex; align-items: center;
  box-sizing: border-box;
  line-height: 58rpx;
}
.select-condition .select-picker picker {
  margin-left: 20rpx;
}
.select-condition .select-picker picker .picker::after {
  content: '';
  position: absolute; right: 21rpx; top: 50%; transform: translateY(-50%);
  width: 13rpx; height: 9rpx; box-sizing: border-box;
  border-top: 9rpx solid #a5a5a5;
  border-left: 6.5rpx solid transparent;
  border-right: 6.5rpx solid transparent;
}
.select-condition .select-picker picker .picker {
  position: relative;
  padding: 0 34rpx 0 25rpx;
  width: 194rpx; height: 60rpx; box-sizing: border-box; border-radius: 8rpx;
  font-size: 28rpx; color: #323232;
  border: solid 1px #eeeeee;
}

button::after {
  display: none; border: none;
}
