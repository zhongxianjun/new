/**index.wxss**/
.index {
  min-height: 100vh;
  background-image: linear-gradient(0deg, #451880 0%, #7b30db 100%);
  position: relative;
}

.index .topHeader {
  width: 100vw;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  position: relative;
}
.index .topHeader .back {
  width: 39rpx;
  position: fixed;
  left: 30rpx;
  top: 66rpx;
  z-index: 9999;
}
.index .topHeader .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 112rpx;
}
.index .topHeader text {
  width: 100%;
  padding-top: 30rpx;
  display: block;
  position: relative;
  z-index: 2;
  font-size: 36rpx;
  color: #fff;
}

.index .header {
  min-height: 315rpx;
}
.index .header image {
  width: 100%;
}
.index .header .preferential {
  width: 144rpx;
  min-height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  position: fixed;
  right: 0;
  top: 426rpx;
  font-size: 24rpx;
  color: #bf3701;
  background: linear-gradient(to right, #ffe350, #ffc33f);
}

.index .main {
  width: 100%;
  min-height: calc(100vh - 630rpx);
  background: linear-gradient(to bottom, #5c22a7, #451880);
  position: absolute;
  left: 0;
  top: 630rpx;
}

.index .main .container {
  width: 690rpx;
  min-height: 782rpx;
  margin: 0 auto;
  margin-top: -118rpx;
  background: #fff;
  border-radius: 20rpx;
}
.index .main .container .btn {
  display: flex;
  flex-flow: column wrap;
}
.index .main .container .btn button {
  width: 633rpx;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 46rpx;
  border: 0;
  font-size: 32rpx;
  color: #fff;
}
.index .main .container .btn button.top {
  background-image: linear-gradient(90deg, #7f36d8 0%, #ab6bfa 100%),
    linear-gradient(#9e5cee, #9e5cee);
  margin-top: 60rpx;
}
.index .main .container .btn navigator {
  text-align: center;
}
.index .main .container .btn button.bottom {
  background-image: linear-gradient(90deg, #ff993f 0%, #ffc34f 100%),
    linear-gradient(#fca431, #fca431);
  margin-top: 24rpx;
}
.index .main .container .details {
  width: 600rpx;
  margin-top: 80rpx;
  margin-left: 30rpx;
}
.index .main .container .details .title {
  font-size: 24rpx;
  color: #bfadff;
}
.index .main .container .details .content {
  font-size: 28rpx;
  color: #9e5cee;
  display: flex;
  flex-flow: column wrap;
  margin-top: 32rpx;
}
.index .main .container .details .content text {
  line-height: 60rpx;
}

/* 分享组件样式 */
.index .share {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
}
.index .share .shareBg {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0.7;
}
.index .share .bottom {
  width: 100%;
  min-height: 230rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  animation: rising 0.15s;
}
.index .share .content {
  width: 600rpx;
  margin: 14rpx auto 0;
  display: flex;
}
.index .share .content button {
  width: 50%;
  border: 0;
  margin: 36rpx 0 16rpx 0;
}
.index .share .content button .wechat,
.index .share .content button .posters {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.index .share .content button .bg {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index .share .content button .wechat .bg {
  background: #e1fae5;
}
.index .share .content button .posters .bg {
  background: #f2eaff;
}
.index .share image {
  width: 70rpx;
}

/* 海报组件样式 */
.index .poster {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
}
.index .poster .posterBg {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0.7;
  position: fixed;
  left: 0;
  top: 0;
}
.index .poster .content {
  position: relative;
  z-index: 2;
  width: 622rpx;
  background: #fff;
  margin: 0 auto;
  margin-top: 128rpx;
  border-radius: 20rpx;
  animation: landing 0.25s;
}
.index .poster .content image {
  width: 622rpx;
}

.index .poster .content .text {
  width: 564rpx;
  margin: 0 auto;
}
.index .poster .content .text .title {
  font-size: 32rpx;
  color: #000;
  line-height: 38rpx;
  margin-top: 28rpx;
  margin-bottom: 10rpx;
}
.index .poster .content .text .QrCode .code {
  width: 215rpx;
  min-height: 215rpx;
  margin: auto;
  background: #bfadff;
}
.index .poster .content .text .QrCode text {
  font-size: 24rpx;
  color: #323232;
  display: block;
  margin: 35rpx auto 32rpx;
  text-align: center;
}
.index .poster .content .text .classfyList {
  display: flex;
  flex-flow: wrap row;
}
.index .poster .content .text .classfyList .classfy {
  width: 33.33%;
  display: flex;
  justify-content: center;
}
.index .poster .content .text .classfyList .classfy text {
  width: 164rpx;
  min-height: 52rpx;
  line-height: 52rpx;
  background: #f8f2ff;
  text-align: center;
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #9d5aef;
  margin-bottom: 18rpx;
}
.index .poster .content .text .address {
  font-size: 24rpx;
  color: #323232;
  margin-top: 18rpx;
  padding-bottom: 30rpx;
  text-align: center;
}

.index .poster .btn {
  position: relative;
  z-index: 2;
  border: 0;
  border-radius: 44rpx;
  width: 524rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fefefe;
  margin-top: 26rpx;
  background-image: linear-gradient(90deg, #8037d8 0%, #aa6afa 100%),
    linear-gradient(#fef3f2, #fef3f2);
  animation: rising 0.25s;
}

@keyframes rising {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}
@keyframes landing {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0);
  }
}
