/* pages/lucky-draw/lucky-draw.wxss */
.luckyDraw {
  width: 100vw;
  min-height: 100vh;
  background: #f6d391;
}

/* 头部样式 */
.luckyDraw .header {
  width: 100vw;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  position: relative;
}
.luckyDraw .header .back {
  width: 39rpx;
  position: fixed;
  left: 30rpx;
  top: 66rpx;
  z-index: 9999;
}
.luckyDraw .header .bg {
  width: 100%;
  height: 112rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.luckyDraw .header text {
  width: 100%;
  padding-top: 30rpx;
  display: block;
  position: relative;
  z-index: 2;
  font-size: 36rpx;
  color: #fff;
}

/* 背景样式 */
.luckyDraw .pageBg {
  width: 100vw;
  height: calc(100vh - 112rpx);
  position: fixed;
  left: 0;
  top: 112rpx;
}
.luckyDraw .pageBg image {
  width: 100vw;
  margin-top: -9rpx;
}
.luckyDraw .pageBg image.first {
  margin-top: 0rpx;
}

/* 主体样式 */
.luckyDraw .main {
  width: 100vw;
  min-height: calc(100vh - 112rpx);
  position: fixed;
  left: 0;
  top: 112rpx;
}
/*  */ /* 走马灯 */
.luckyDraw .main .myPrize {
  width: 153rpx;
  min-height: 54rpx;
  line-height: 54rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  position: fixed;
  right: 0;
  top: 144rpx;
}
.luckyDraw .main .lamp {
  width: 672rpx;
  height: 178rpx;
  margin: 138rpx auto 0;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.luckyDraw .main .lamp .yellow,
.luckyDraw .main .lamp .white {
  box-shadow: 0 0 6rpx 6rpx #ffe04e;
}
.luckyDraw .main .lamp .top,
.luckyDraw .main .lamp .bottom {
  width: 582rpx;
  height: 36rpx;
  margin: 0 auto;
  display: flex;
  overflow: hidden;
  align-items: center;
}
.luckyDraw .main .lamp .bottom {
  margin-top: 128rpx;
}
.luckyDraw .main .lamp .top .content,
.luckyDraw .main .lamp .bottom .content {
  display: flex;
}
.luckyDraw .main .lamp .top .content .yellow,
.luckyDraw .main .lamp .bottom .content .yellow {
  width: 16rpx;
  height: 16rpx;
  margin: 0 19rpx;
  background-color: #fdf71e;
  border-radius: 50%;
}
.luckyDraw .main .lamp .top .content .white,
.luckyDraw .main .lamp .bottom .content .white {
  width: 16rpx;
  height: 16rpx;
  margin: 0 19rpx;
  background-color: #fff;
  border-radius: 50%;
}
.luckyDraw .main .lamp .left,
.luckyDraw .main .lamp .right {
  width: 20rpx;
  min-height: 190rpx;
  position: absolute;
  top: 4rpx;
  display: flex;
  flex-flow: wrap column;
}
.luckyDraw .main .lamp .left {
  left: 8rpx;
}
.luckyDraw .main .lamp .right {
  right: 4rpx;
}
.luckyDraw .main .lamp .left .content,
.luckyDraw .main .lamp .right .content {
  display: flex;
  flex-flow: wrap column;
}
.luckyDraw .main .lamp .left .content .white,
.luckyDraw .main .lamp .right .content .white {
  width: 16rpx;
  height: 16rpx;
  margin: 17rpx 0;
  background-color: #fff;
  border-radius: 50%;
}
.luckyDraw .main .lamp .left .content .yellow,
.luckyDraw .main .lamp .right .content .yellow {
  width: 16rpx;
  height: 16rpx;
  margin: 17rpx 0;
  background-color: #fdf71e;
  border-radius: 50%;
}

/*  */ /* 红包列表 */
.luckyDraw .main .prizeContent {
  width: 565rpx;
  height: 310rpx;
  overflow: hidden;
  background: #e44501;
  margin: 106rpx auto 0;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
}
.luckyDraw .main .prizeContent .prizeList {
  width: 177rpx;
  min-height: calc(100vh - 132rpx);
  background-color: #fff;
  position: relative;
  transform: translateY(-40.5%);
}
.luckyDraw .main .prizeContent .prizeList .red-envelope {
  width: 116rpx;
  margin: 22rpx auto;
  position: relative;
}
.luckyDraw .main .prizeContent .prizeList .red-envelope image {
  width: 116rpx;
}
.luckyDraw .main .prizeContent .prizeList .red-envelope text {
  width: 82rpx;
  font-size: 26rpx;
  color: #ffe04e;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 66rpx;
  margin-left: -41rpx;
}

/*  */ /* 按钮 */
.luckyDraw .main .btn {
  width: 536rpx;
  margin: 50rpx auto 0;
  position: relative;
}
.luckyDraw .main .btn image {
  width: 536rpx;
  position: absolute;
}
.luckyDraw .main .btn image.press {
  left: 0;
  top: 10rpx;
}
.luckyDraw .main .btn .text {
  width: 410rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.luckyDraw .main .btn .text .left {
  display: flex;
  align-items: center;
}
.luckyDraw .main .btn .text .left .chance {
  width: 60rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  margin-right: 8rpx;
}
.luckyDraw .main .btn .text .left .times {
  font-size: 80rpx;
  color: #fff;
}
.luckyDraw .main .btn .text .right {
  margin-top: -10rpx;
  text-align: center;
}
.luckyDraw .main .btn .text .right button {
  font-size: 40rpx;
  color: #fff;
  border: 0;
  margin-top: 10rpx;
  padding: 0;
}

.luckyDraw .main .winning-record {
  width: 536rpx;
  margin: 96rpx auto 0;
}
.luckyDraw .main .winning-record .title {
  width: 100%;
  min-height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #c64d00;
  text-align: center;
  display: flex;
  justify-content: space-between;
}
.luckyDraw .main .winning-record swiper {
  width: 510rpx;
  height: 66rpx;
  padding: 0 13rpx;
}
.luckyDraw .main .winning-record swiper .container .list {
  min-height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #c64d00;
  display: flex;
}
.luckyDraw .main .winning-record swiper .container .list view {
  margin-right: 10rpx;
}
.luckyDraw .main .winning-record swiper .container .list .prize {
  width: 194rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
